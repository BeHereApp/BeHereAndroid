<resources>

    <!-- Base application theme. -->
    <style name="BeHereTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/teal</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorButtonNormal">@color/teal</item>
    </style>

    <style name="BeHereTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BeHereTheme.Login" parent="BeHereTheme.NoActionBar">
        <item name="editTextStyle">@style/WhiteEditText</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorButtonNormal">@color/teal</item>
        <item name="android:colorBackground">@color/gray</item>
    </style>

    <style name="WhiteEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
