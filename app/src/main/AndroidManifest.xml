<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="br.ufrn.imd.behere">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BeHereTheme">
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/BeHereTheme.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.LinkActivity"/>
        <activity android:name=".activities.StudentChooseActivity"/>
        <activity android:name=".activities.StudentPasswordActivity"/>
        <activity android:name=".activities.StudentResultActivity"/>
        <activity android:name=".activities.ProfessorSubjectActivity"/>
        <activity android:name=".activities.ProfessorChooseActivity"/>
        <activity android:name=".activities.ProfessorPasswordActivity"/>
        <activity android:name=".activities.ProfessorQrCodeActivity"/>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation"/>
    </application>

</manifest>